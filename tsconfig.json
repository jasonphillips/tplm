{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "packages",
    "baseUrl": ".",
    "paths": {
      "@tpl/parser": ["./packages/parser"],
      "@tpl/compiler": ["./packages/compiler"],
      "@tpl/runtime": ["./packages/runtime"],
      "@tpl/composer": ["./packages/composer"],
      "@tpl/renderer": ["./packages/renderer"]
    }
  },
  "include": [
    "packages/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "legacy",
    "tests",
    "scripts"
  ]
}
